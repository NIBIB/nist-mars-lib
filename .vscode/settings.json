{
    "eslint.enable": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true
    },
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.rulers": [
        {
            "column": 80,
            "color": "#ffff00"
        },
        {
            "column": 120,
            "color": "#ff0000"
        }
    ],
    "editor.formatOnSave": false
}